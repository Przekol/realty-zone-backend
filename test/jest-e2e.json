{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@types": "<rootDir>/types",
    "^@common(.*)$": "<rootDir>/common/$1",
    "^@shared(.*)$": "<rootDir>/shared/$1",
    "^@providers(.*)$": "<rootDir>/providers/$1",
    "^@config": "<rootDir>/config",
    "^@api(.*)$": "<rootDir>/api/$1"
  }
}
